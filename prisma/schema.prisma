// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Pet {
  id        Int      @id @default(autoincrement())
  species   String
  name      String
  role      String
  comment   String
  emoji     String?
  createdAt DateTime @default(now())
  initials  String?   // ← 追加：記入者のイニシャル
}
